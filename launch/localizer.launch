<launch>
   
  <arg name="PARTICLE_N" default="500"/>
  <arg name="POSITION_SIGMA" default="300.0"/>
  <arg name="ORIENTATION_SIGMA" default="0.3"/>
  <arg name="_INIT_X_COVARIANCE" default="0.3"/>
  <arg name="_INIT_Y_COVARIANCE" default="0.3"/>
  <arg name="_INIT_YAW_COVARIANCE" default="0.2"/>
  <arg name="_INIT_X" default="-1.2"/>
  <arg name="_INIT_Y" default="0"/>
  <arg name="_INIT_YAW" default="0.0"/>
  <arg name="ODOM_X_NOISE" default="0.20"/>
  <arg name="ODOM_Y_NOISE" default="0.02"/>
  <arg name="ODOM_YAW_NOISE" default="0.20"/>
  <arg name="RANGE_MAX" default="10.0"/>
  <arg name="MATCHING_STEP" default="1"/>
  <arg name="UPDATE_DISTANCE" default="0.2"/>
  <arg name="UPDATE_ANGLE" default="0.1"/>
  <arg name="LASER_Z_HIT" default="0.95"/>
  <arg name="LASER_Z_SHORT" default="0.1"/>
  <arg name="LASER_Z_MAX" default="0.05"/>
  <arg name="LASER_Z_RAND" default="0.05"/>
  <arg name="LASER_SIGMA_HIT" default="0.2"/>
  <arg name="LASER_LAMBDA_SHORT" default="0.1"/>
  <arg name="LASER_LIKELIHOOD_MAX_DIST" default="2.0"/>

  <node pkg="chibi18_control" name="localizer" type="localizer">
    <param name="N" value="$(arg PARTICLE_N)"/>
    <param name="POSITION_SIGMA" value="$(arg POSITION_SIGMA)"/>
    <param name="ORIENTATION_SIGMA" value="$(arg ORIENTATION_SIGMA)"/>
    <param name="INIT_X_COVARIANCE" value="$(arg _INIT_X_COVARIANCE)"/>
    <param name="INIT_Y_COVARIANCE" value="$(arg _INIT_Y_COVARIANCE)"/>
    <param name="INIT_YAW_COVARIANCE" value="$(arg _INIT_YAW_COVARIANCE)"/>
    <param name="INIT_X" value="$(arg _INIT_X)"/>
    <param name="INIT_Y" value="$(arg _INIT_Y)"/>
    <param name="INIT_YAW" value="$(arg _INIT_YAW)"/>
    <param name="ODOM_X_NOISE" value="$(arg ODOM_X_NOISE)"/>
    <param name="ODOM_Y_NOISE" value="$(arg ODOM_Y_NOISE)"/>
    <param name="ODOM_YAW_NOISE" value="$(arg ODOM_YAW_NOISE)"/>
    <param name="RANGE_MAX" value="$(arg RANGE_MAX)"/>
    <param name="MATCHING_STEP" value="$(arg MATCHING_STEP)"/>
    <param name="UPDATE_DISTANCE" value="$(arg UPDATE_DISTANCE)"/>
    <param name="UPDATE_ANGLE" value="$(arg UPDATE_ANGLE)"/>
    <param name="LASER_Z_HIT" value="$(arg LASER_Z_HIT)"/>
    <param name="LASER_Z_SHORT" value="$(arg LASER_Z_SHORT)"/>
    <param name="LASER_Z_MAX" value="$(arg LASER_Z_MAX)"/>
    <param name="LASER_Z_RAND" value="$(arg LASER_Z_RAND)"/>
    <param name="LASER_SIGMA_HIT" value="$(arg LASER_SIGMA_HIT)"/>
    <param name="LASER_LAMBDA_SHORT" value="$(arg LASER_LAMBDA_SHORT)"/>
    <param name="LASER_LIKELIHOOD_MAX_DIST" value="$(arg LASER_LIKELIHOOD_MAX_DIST)"/>
  </node>

</launch>
